<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>BigStack</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/profile.css" />
  </head>

  <body>
    <div class="container">
      <header>
        <nav>
          <ul>
            <li><a href="http://localhost:3000">Home</a></li>
            <li id="logout"><a href="index.html">Logout</a></li>
          </ul>
        </nav>
      </header>
      <div class="card" style="width: 18rem ;">
        <img
          class="card-img-top"
          src="http://localhost:3000/api/profile/profilepic/show/<%= profile.profilepic%>"
          alt="Card image cap"
        />
      </div>
      <p id="userN">
        <%= profile.user.name%> <br />
        (<%= profile.username%>) <br />
        <br />
        form <%= profile.country%>
      </p>

      <div id="user-blogs">
        <h1>Blogs</h1>
        <hr />
        <h3>Not posted any blog yet!!!</h3>
      </div>

      <div class="user-links">
        <p id="msg">Links</p>
        <hr />
        <p id="p1">
          Website:<a href="http://<%=profile.website%>">
            <%=profile.website%></a
          >
        </p>
        <p id="p2">
          Portfolio:<a href="http://<%=profile.portfolio%>">
            <%=profile.portfolio%></a
          >
        </p>
        <br />
        <br />
        <p id="p1">
          Github:
          <a href="http://<%=profile.social.github%>">
            <%=profile.social.github%></a
          >
        </p>
        <p id="p2">
          Linkedin:<a href="http://<%=profile.social.linkedin%>">
            <%=profile.social.linkedin%></a
          >
        </p>
        <br />
        <br />
        <p id="p1">
          Youtube:<a href="http://<%=profile.social.youtube%>">
            <%=profile.social.youtube%></a
          >
        </p>
        <p id="p2">
          Facebook:<a href="http://<%=profile.social.facebook%>">
            <%=profile.social.facebook%></a
          >
        </p>
      </div>

      <div id="prgm-languages">
        <h4>Programing languages:</h4>
        <hr />
        <p><%=profile.languages%></p>
      </div>
    </div>
  </body>
</html>
