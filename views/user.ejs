<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/user.css" />

    <title>Document</title>
  </head>
  <body>
    <header>
      <header>
        <nav>
          <ul>
            <li><a href="http://localhost:3000">Home</a></li>
            <li id="logout">
              <a href="http://localhost:3000/api/auth/logout">Logout</a>
            </li>
          </ul>
        </nav>
      </header>
    </header>

    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="card bg-secondary text-white" id="card" style="width:70%">
            <img
              class="card-img-bottom"
              src="/images/profilepic-1541345073598.png"
              alt="Card image cap"
            />
            <div class="card-body">
              <form
                method="POST"
                action="/api/profile/Upload"
                enctype="multipart/form-data"
              >
                <input
                  type="file"
                  class="form-control-file border"
                  id="fileinput"
                />
              </form>

              <h4 class="card-title"><%=profile.username%></h4>

              <button type="button" class="btn btn-dark btn-block">Edit</button>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <p id="msg">Personal Information</p>
          <form action="/api/profile" method="POST" class="profileform">
            <p>Country you belong to:</p>
            <input type="text" id="country" class="form-control"
            placeholder="country" readonly="true" value=<%=profile.country%> />
            <p>Your website's url:</p>
            <input type="url" id="website" class="form-control"
            placeholder="website" readonly="true" value=<%=profile.website%> />
            <p>programing languages you know:</p>
            <input type="text" id="lang" class="form-control"
            placeholder="languages" readonly="true" value=<%=profile.languages%>
            />
            <p>Your portfolio:</p>
            <input type="url" class="form-control" id="portfolio"
            placeholder="portfolio" readonly="true" value=<%=profile.portfolio%>
            />
            <p>Your youtube channel link:</p>
            <input type="url" id="youtube" class="form-control"
            placeholder="youtube link" readonly="true"
            value=<%=profile.social.youtube%> />
            <p>your linkedin link:</p>
            <input type="url" id="linkedin" class="form-control"
            placeholder="linkedin link" readonly="true"
            value=<%=profile.social.linkedin%> />
            <p>Your facebook link:</p>
            <input type="url" class="form-control" id="facebook"
            placeholder="facebook link" readonly="true"
            value=<%=profile.social.facebook%> />
            <p>Your github link:</p>
            <input type="url" id="github" class="form-control"
            placeholder="github link" readonly="true"
            value=<%=profile.social.github%> />
            <div id="button">
              <button type="submit" class="btn btn-secondary" id="save">
                Save
              </button>
              <button type="button" class="btn btn-secondary" id="edit">
                Edit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
      integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
      integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
      crossorigin="anonymous"
    ></script>
    <script src="/user.js"></script>
  </body>
</html>
